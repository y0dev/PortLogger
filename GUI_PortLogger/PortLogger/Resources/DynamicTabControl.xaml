<UserControl x:Class="PortLogger.Resources.DynamicTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PortLogger.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<DockPanel>
		<TabControl Name="serialPortTabControl" DockPanel.Dock="Top"
                    ItemsSource="{Binding Tabs}"
                    SelectedItem="{Binding SelectedTab}">
			<TabControl.ContentTemplate>
				<DataTemplate>
					<TextBox Text="{Binding Content}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True"/>
				</DataTemplate>
			</TabControl.ContentTemplate>
		</TabControl>
	</DockPanel>
</UserControl>
