<Window x:Class="YourNamespace.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
	<Grid>
		<!-- Text boxes for IP address and port -->
		<TextBox x:Name="txtIpAddress" Margin="10" Text="{Binding IpAddress}" />
		<TextBox x:Name="txtPort" Margin="10" Text="{Binding Port}" />

		<!-- Save and Cancel buttons -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
			<Button Content="Save" Click="Save_Click" />
			<Button Content="Cancel" Click="Cancel_Click" />
		</StackPanel>
	</Grid>
</Window>
